<resources>

    <style name="ScaffoldLight" parent="Theme.AppCompat.Light">
        <item name="drawerArrowStyle">@style/ScaffoldDrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">?attr/actionBarSize</item>
        <item name="colorPrimary">@color/scaffold_color_primary</item>
        <item name="colorPrimaryDark">@color/scaffold_color_primary_dark</item>
        <item name="colorAccent">@color/scaffold_color_accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ScaffoldLight.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/ScaffoldDrawerArrowStyle.DarkActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">?attr/actionBarSize</item>
        <item name="colorPrimary">@color/scaffold_color_primary</item>
        <item name="colorPrimaryDark">@color/scaffold_color_primary_dark</item>
        <item name="colorAccent">@color/scaffold_color_accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ScaffoldNavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="itemIconTint">@color/scaffold_navigation_drawer_item_icon_tint</item>
        <item name="itemTextColor">@color/scaffold_navigation_drawer_item_text_color</item>
    </style>

    <style name="ScaffoldAppBarLayout" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="ScaffoldActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="ScaffoldToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ScaffoldActionBarTheme</item>
    </style>

    <style name="ScaffoldCollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ScaffoldDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">?android:attr/textColorPrimary</item>
    </style>

    <style name="ScaffoldDrawerArrowStyle.DarkActionBar" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">?android:attr/textColorPrimary</item>
    </style>

    <style name="ScaffoldHorizontalSpacer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ScaffoldVerticalSpacer">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ScaffoldDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ScaffoldNavigationHeaderView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderBackgroundImageOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.15</item>
        <item name="android:src">@android:color/black</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/scaffold_navigation_header_margin</item>
        <item name="android:paddingLeft">@dimen/scaffold_navigation_header_margin</item>
        <item name="android:paddingRight">@dimen/scaffold_navigation_header_margin</item>
        <item name="android:paddingTop">@dimen/scaffold_navigation_header_margin_top</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderAccountImageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderCurrentAccountImage">
        <item name="android:layout_width">@dimen/scaffold_navigation_header_current_account_image_size</item>
        <item name="android:layout_height">@dimen/scaffold_navigation_header_current_account_image_size</item>
        <item name="riv_border_color">@android:color/white</item>
        <item name="riv_border_width">@dimen/scaffold_navigation_header_current_account_image_border_width</item>
        <item name="riv_oval">true</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderAltAccountImage">
        <item name="android:layout_width">@dimen/scaffold_navigation_header_alt_account_image_size</item>
        <item name="android:layout_height">@dimen/scaffold_navigation_header_alt_account_image_size</item>
        <item name="android:layout_marginLeft">@dimen/scaffold_navigation_header_alt_account_image_margin</item>
        <item name="android:layout_marginRight">@dimen/scaffold_navigation_header_alt_account_image_margin</item>
        <item name="riv_oval">true</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderAccountDropDownButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:src">@drawable/ic_arrow_drop_down_18dp</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderCurrentAccountName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ScaffoldNavigationViewHeaderCurrentAccountEmail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ScaffoldFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_add_24dp</item>
        <item name="elevation">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="ScaffoldTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Scaffold.CollapsingToolbarTabLayout" parent="android:Widget">
        <item name="scaffoldExpandedTitleMargin">32dp</item>
        <item name="scaffoldStatusBarScrim">?attr/colorPrimaryDark</item>
    </style>

    <style name="ScaffoldCollapsingToolbar.ExpandedTextAppearance" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
